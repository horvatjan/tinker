<div class="wrapper subpage">
  <h1>Contact us</h1>

  <%= form_tag("/sendmessage", method: "post") do |f| %>

    <div class="form-group">
      <%= label_tag(:email, "Your email address") %>
      <%= text_field_tag :email, nil, class: 'form-control', :required => true, :type => 'email' %>
    </div>

    <div class="form-group">
      <%= label_tag(:subject, "Subject") %>
      <%= text_field_tag :subject, nil, class: 'form-control', :required => true, :value => params[:subject] %>
    </div>

    <div class="form-group">
      <%= label_tag(:message, "Message") %>
      <%= text_area_tag :message, nil, class: 'form-control', size: "25x5", :required => true %>
    </div>

  <%= submit_tag("Submit", class: "btn btn-default pull-right btn-lg") %>
  <% end %>
    <div style="clear:both;"></div>
  </form>
</div>
